<launch>
	<!--ar码的边长，单位cm-->
	<arg name="marker_size" default="3.0" />
	<!--摄像头的话题名-->
	<arg name="cam_name" default="hand_cam" />
	<arg name="cam_image_topic" default="/hand_camera/image_raw" />
	<arg name="cam_info_topic" default="/hand_camera/camera_info" />
	<arg name="output_frame" default="hand_cam_link" />
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="arm_to_cam"
		args="0.077 -0.019 0.052 1.57079632679 0 3.1415926
	end hand_cam_link" /> -->

	<!--打开individualMarkersNoKinect节点并映射为ar_track_alvar节点-->
	<node name="hand_ar" pkg="ar_track_alvar" type="individualMarkersNoKinect">
		<param name="marker_size"           type="double" value="$(arg marker_size)" />
		<param name="max_new_marker_error"  type="double" value="0.08" />
		<param name="max_track_error"       type="double" value="0.2" />
		<param name="output_frame"          type="string" value="$(arg output_frame)" />
		<remap from="camera_image"  to="$(arg cam_image_topic)" />
		<remap from="camera_info"   to="$(arg cam_info_topic)" />
		<remap from="ar_pose_marker" to="hand_cam/ar_pose_marker"/>
	</node>
</launch>
